{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": [
            "error",
            "never"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "indent": [
            "error",
            "tab"
        ],
        "eqeqeq": 2,
        "no-trailing-spaces": 2,
        "no-console": 0,
        "space-infix-ops": [
            "error",
            {
                "int32Hint": true
            }
        ]
    }
}
